{
	"name": "cc-map-editor",
	"version": "0.7.0",
	"license": "MIT",
	"repository": "https://github.com/CCDirectLink/crosscode-map-editor",
	"main": "main.js",
	"build": {
		"appId": "CCDirectLink.crosscode.map.editor",
		"artifactName": "${productName}-${version}-${os}.${ext}",
		"files": [
			"main.js",
			"distAngular"
		],
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"win": {
			"target": [
				"nsis"
			],
			"publish": [
				"github"
			]
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"publish": [
				"github"
			]
		}
	},
	"browserslist": [
		"Electron >= 4"
	],
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"start:aot": "ng serve --aot",
		"startNoLiveReload": "ng serve --live-reload false",
		"build": "ng build",
		"build:prod": "ng build --prod --no-progress",
		"test": "ng test",
		"lint": "ng lint",
		"electron:dev": "electron . --dev",
		"electron:prod": "electron .",
		"builder:pack": "electron-builder --dir",
		"builder:dist": "electron-builder --publish never",
		"postinstall": "electron-builder install-app-deps",
		"package": "npm run postinstall && npm run build:prod && npm run builder:dist",
		"dist": "npm run build:prod && npm run builder:dist",
		"release": "npm run build:prod && electron-builder --publish always"
	},
	"private": true,
	"dependencies": {
		"@angular-eslint/template-parser": "0.0.1-alpha.32",
		"@angular/animations": "^9.1.9",
		"@angular/cdk": "^9.2.4",
		"@angular/common": "^9.1.9",
		"@angular/compiler": "^9.1.9",
		"@angular/core": "^9.1.9",
		"@angular/flex-layout": "^9.0.0-beta.31",
		"@angular/forms": "^9.1.9",
		"@angular/material": "^9.2.4",
		"@angular/platform-browser": "^9.1.9",
		"@angular/platform-browser-dynamic": "^9.1.9",
		"@angular/router": "^9.1.9",
		"angular2-draggable": "^2.3.2",
		"cc-map-editor-common": "../common",
		"core-js": "^3.6.5",
		"electron-context-menu": "^2.0.1",
		"electron-log": "^4.2.1",
		"electron-updater": "^4.3.1",
		"electron-window-state": "^5.0.3",
		"hammerjs": "^2.0.8",
		"jsoneditor": "^9.0.0",
		"node-ipc": "^9.1.1",
		"node-sass": "^4.14.1",
		"phaser": "^3.23.0",
		"rxjs": "^6.5.5",
		"zone.js": "^0.10.3"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^0.901.7",
		"@angular-eslint/builder": "0.0.1-alpha.32",
		"@angular-eslint/eslint-plugin": "0.0.1-alpha.32",
		"@angular-eslint/eslint-plugin-template": "0.0.1-alpha.32",
		"@angular/cli": "^9.1.7",
		"@angular/compiler-cli": "^9.1.9",
		"@angular/language-service": "^9.1.9",
		"@types/jsoneditor": "^8.6.0",
		"@types/node": "^12.12.44",
		"@typescript-eslint/eslint-plugin": "^3.1.0",
		"@typescript-eslint/parser": "^3.1.0",
		"electron": "^9.0.2",
		"electron-builder": "^22.7.0",
		"eslint": "^7.2.0",
		"typescript": "~3.8.3"
	}
}
